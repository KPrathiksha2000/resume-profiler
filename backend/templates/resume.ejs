<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= name %> - Resume</title>
  <style>
    body {
      font-family: 'Helvetica Neue', Arial, sans-serif;
      margin: 0;
      padding: 0;
      background: #f4f4f4;
      color: #333;
    }

    .grid-2 {
      display: flex;
      gap: 20px;
      page-break-inside: avoid;
    }
    .grid-2 .col {
      flex: 1;
    }

    @page {
      margin: 50px 30px;
    }

    .container {
      max-width: 800px;
      margin: 30px auto;
      background: #fff;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      padding: 10px 10px 10px 10px;
    }

    .header {
      background: #2E86C1;
      color: #fff;
      padding: 20px;
      display: flex;
      align-items: center;
      page-break-inside: avoid;
    }

    .header img {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      border: 4px solid #fff;
      object-fit: cover;
      margin-right: 20px;
    }

    .header .info {
      flex: 1;
    }

    .header h1 {
      margin: 0;
      font-size: 32px;
      font-weight: 700;
    }

    .header p {
      margin: 5px 0 0;
      font-size: 16px;
    }

    .section {
      padding: 20px;
      border-bottom: 1px solid #e0e0e0;
      page-break-inside: avoid;
    }

    .section h2 {
      margin-top: 0;
      font-size: 20px;
      border-bottom: 2px solid #2E86C1;
      padding-bottom: 5px;
      color: #2E4053;
    }

    .section p,
    .section li {
      font-size: 15px;
      line-height: 1.6;
    }

    .section ul {
      padding-left: 20px;
      margin: 0;
    }

    .contact-info p {
      margin: 4px 0;
    }

    .contact-info .label {
      font-weight: bold;
      color: #2E4053;
    }

    .education-item,
    .experience-item,
    .project-item,
    .certification-item {
      margin-bottom: 12px;
    }

    .social-links {
      page-break-inside: avoid;
    }

    .social-links a {
      display: inline-block;
      margin-right: 12px;
      color: #2E86C1;
      text-decoration: none;
      font-weight: 600;
    }

    .social-links a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container">
    
    <div class="header">
      <% if (photo) { %>
        <img src="<%= photoUrl %>" alt="Profile Photo" />
      <% } %>
      <div class="info">
        <h1><%= name %></h1>
        <p><%= email %></p>
        <% if (contactInfo.contact) { %>
          <p>ðŸ“ž <%= contactInfo.contact %></p>
        <% } %>
      </div>
    </div>

    <% if (socialLinks && socialLinks.length) { %>
      <div class="section social-links">
        <% socialLinks.forEach(link => { 
             if (link.url && link.url.trim()) { %>
          <a href="<%= link.url %>" target="_blank" rel="noopener noreferrer">
            <%= link.platform.charAt(0).toUpperCase() + link.platform.slice(1) %>
          </a>
        <% } }); %>
      </div>
    <% } %>

    <% if (aboutMe) { %>
      <div class="section">
        <h2>About Me</h2>
        <p><%= aboutMe %></p>
      </div>
    <% } %>

    <div class="section contact-info">
      <h2>Contact Info</h2>
      <% if (contactInfo.email) { %>
        <p><span class="label">Email:</span> <%= contactInfo.email %></p>
      <% } %>
      <% if (contactInfo.address) { %>
        <p><span class="label">Address:</span> <%= contactInfo.address %></p>
      <% } %>
    </div>

    <div class="section grid-2">
          <% if (education && education.length) { %>
      <div class="col">
        <h2>Education</h2>
        <ul>
          <% education.forEach(edu => { %>
            <li class="education-item">
              <strong><%= edu.university %></strong> â€“ <%= edu.branch %><br />
              <%= edu.duration %><br />
              <span>CGPA: <%= edu.cgpa %></span>
            </li>
          <% }) %>
        </ul>
      </div>
    <% } %>
        <% if (skills && skills.length) { %>
      <div class="col">      
        <h2>Skills</h2>
        <ul>
          <% skills.forEach(skill => { %>
            <li><%= skill %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>      
    </div>


    <% if (languages && languages.length) { %>
      <div class="section">
        <h2>Languages</h2>
        <ul>
          <% languages.forEach(lang => { %>
            <li><%= lang %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <% if (experience && experience.length) { %>
      <div class="section">
        <h2>Experience</h2>
        <ul>
          <% experience.forEach(exp => { %>
            <li class="experience-item">
              <strong><%= exp.role %></strong> at <%= exp.company %> (<%= exp.type %>)<br />
              <%= exp.duration %> â€“ <%= exp.location %><br />
              <em>Skills Used:</em> <%= exp.skills %><br />
              <%= exp.description %>
            </li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <% if (projects && projects.length) { %>
      <div class="section">
        <h2>Projects</h2>
        <ul>
          <% projects.forEach(proj => { %>
            <li class="project-item">
              <strong><%= proj.name %></strong> (<%= proj.type %>)<br />
              <%= proj.duration %><br />
              <em>Skills Used:</em> <%= proj.skills %><br />
              <%= proj.description %>
            </li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <% if (certifications && certifications.length) { %>
      <div class="section">
        <h2>Certifications</h2>
        <ul>
          <% certifications.forEach(cert => { %>
            <li class="certification-item">
              <strong><%= cert.name %></strong><br />
              <%= cert.duration %>
            </li>
          <% }) %>
        </ul>
      </div>
    <% } %>

  </div>
</body>
</html>
