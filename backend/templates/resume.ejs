<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= name %> - Resume</title>
  <style>
        body {
      font-family: 'Helvetica Neue', Arial, sans-serif;
      margin: 0;
      padding: 0;
      background: #f4f4f4;
      color: #333;
    }

    .container {
  max-width: 800px;
  margin: 30px auto;
  background: #fff;
  box-shadow: 0 0 10px rgba(0,0,0,0.1);
  border: 1px solid transparent; /* invisible border */
  padding: 30px 10px 10px 10px;   /* top padding increased */
  border-top: 2px solid transparent; /* invisible but reserves space */
}


    .header {
      background: #2E86C1;
      color: #fff;
      padding: 20px;
      display: flex;
      align-items: center;
      page-break-inside: avoid;
    }
    .header img {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      border: 4px solid #fff;
      object-fit: cover;
      margin-right: 20px;
      page-break-inside: avoid;
    }
    .header .info {
      flex: 1;
    }
    .header h1 {
      margin: 0;
      font-size: 32px;
      font-weight: 700;
    }
    .header p {
      margin: 5px 0 0;
      font-size: 16px;
    }

    .section {
      padding: 20px;
      border-bottom: 1px solid #e0e0e0;
      page-break-inside: avoid;
    }
    .section h2 {
      margin-top: 0;
      font-size: 20px;
      border-bottom: 2px solid #2E86C1;
      padding-bottom: 5px;
      color: #2E4053;
      page-break-after: avoid;
    }
    .section p, .section li {
      font-size: 15px;
      line-height: 1.6;
    }
    .section ul {
      padding-left: 20px;
      margin: 0;
    }

    .contact-info p {
      margin: 4px 0;
    }
    .contact-info span.label {
      font-weight: bold;
      color: #2E4053;
    }

    .grid-2 {
      display: flex;
      gap: 20px;
      page-break-inside: avoid;
    }
    .grid-2 .col {
      flex: 1;
    }

    .education-item, .experience-item,
    .project-item, .certification-item {
      margin-bottom: 12px;
      page-break-inside: avoid;
    }
    .education-item span,
    .experience-item span {
      display: block;
      font-size: 14px;
      color: #555;
    }

    .social-links {
      page-break-inside: avoid;
    }
    .social-links a {
      display: inline-block;
      margin-right: 12px;
      color: #2E86C1;
      text-decoration: none;
      font-weight: 600;
    }
    .social-links a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <% if (photo) { %>
        <img src="<%= photoUrl %>" alt="Profile Photo" />
      <% } %>
      <div class="info">
        <h1><%= name %></h1>
        <p><%= email %></p>
        <% if(contactInfo.contact){ %>
          <p>ðŸ“ž <%= contactInfo.contact %></p>
        <% } %>
      </div>
    </div>

    <% if (aboutMe) { %>
    <div class="section">
      <h2>About Me</h2>
      <p><%= aboutMe %></p>
    </div>
    <% } %>

    <div class="section contact-info">
      <h2>Contact Info</h2>
      <% if (contactInfo.email) { %><p><span class="label">Email:</span> <%= contactInfo.email %></p><% } %>
      <% if (contactInfo.address) { %><p><span class="label">Address:</span> <%= contactInfo.address %></p><% } %>
    </div>

    <div class="section grid-2">
      <% if (skills && skills.length) { %>
      <div class="col">
        <h2>Skills</h2>
        <ul>
          <% skills.forEach(skill => { %>
            <li><%= skill %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>
      <% if (languages && languages.length) { %>
      <div class="col">
        <h2>Languages</h2>
        <ul>
          <% languages.forEach(lang => { %>
            <li><%= lang %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>
    </div>

    <% if (education && education.length) { %>
    <div class="section">
      <h2>Education</h2>
      <% education.forEach(edu => { %>
        <div class="education-item">
          <strong><%= edu.university %></strong> â€“ <%= edu.branch %>
          <span><%= edu.duration %></span>
          <span>CGPA: <%= edu.cgpa %></span>
        </div>
      <% }) %>
    </div>
    <% } %>

    <% if (experience && experience.length) { %>
    <div class="section">
      <h2>Experience</h2>
      <ul>
        <% experience.forEach(exp => { %>
          <li class="experience-item"><%= exp %></li>
        <% }) %>
      </ul>
    </div>
    <% } %>

    <% if (projects && projects.length) { %>
    <div class="section">
      <h2>Projects</h2>
      <ul>
        <% projects.forEach(proj => { %>
          <li class="project-item"><%= proj %></li>
        <% }) %>
      </ul>
    </div>
    <% } %>

    <% if (certifications && certifications.length) { %>
    <div class="section">
      <h2>Certifications</h2>
      <ul>
        <% certifications.forEach(cert => { %>
          <li class="certification-item"><%= cert %></li>
        <% }) %>
      </ul>
    </div>
    <% } %>

    <% if (socialLinks) { %>
    <div class="section social-links">
      <h2>Social Links</h2>
      <% Object.entries(socialLinks).forEach(([key, url]) => {
           if (url.trim()) { %>
        <a href="<%= url %>" target="_blank" rel="noopener noreferrer">
          <%= key.charAt(0).toUpperCase() + key.slice(1) %>
        </a>
      <% } }); %>
    </div>
    <% } %>

  </div>
</body>
</html>
